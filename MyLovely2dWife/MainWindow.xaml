<Window
    x:Class="MyLovely2dWife.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Views="clr-namespace:MyLovely2dWife.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="WPF Live2D Demo"
    Width="1000"
    Height="800"
    UseLayoutRounding="True"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>
        <Views:WifeView x:Name="renderView" Grid.Row="0"/>
        <StackPanel Grid.Row="1">
            <ComboBox  ItemsSource="{Binding ElementName=renderView, Path=MotionNames}" SelectionChanged="ComboBox_Selected"></ComboBox>
        </StackPanel>
    </Grid>
</Window>
